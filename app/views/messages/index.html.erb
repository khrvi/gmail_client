<p id="notice"><%= notice %></p>

<h1>Inbox</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Subject</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to print_bold_if_unread(message, :from), message %></td>
        <td><%= link_to print_bold_if_unread(message, :subject), message %></td>
        <td><%= print_bold_if_unread(message, :date) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>